{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/NexeraProtocol/vc-schemas/test/id3/examples/id3/v0/id3.jsonld",
      "jsonSchema": "https://raw.githubusercontent.com/NexeraProtocol/vc-schemas/test/id3/examples/id3/v0/id3.json"
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": {
      "type": ["string", "array", "object"]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": ["string", "object"],
      "format": "uri",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialSchema": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "subjectPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "merklizationRootPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "revNonce": {
      "type": "integer"
    },
    "version": {
      "type": "integer"
    },
    "updatable": {
      "type": "boolean"
    },
    "credentialSubject": {
      "type": "object",
      "properties": {
        "journeyId": {
          "type": "string"
        },
        "personalDetails": {
          "type": "object",
          "properties": {
            "citizenship": {
              "type": "string"
            },
            "documentType": {
              "type": "string"
            },
            "firstName": {
              "type": "string"
            },
            "lastName": {
              "type": "string"
            },
            "gender": {
              "type": "string"
            },
            "addressLine1": {
              "type": ["string", "null"]
            },
            "addressLine2": {
              "type": ["string", "null"]
            },
            "birthday": {
              "type": "string",
              "format": "date"
            },
            "placeOfBirth": {
              "type": "string"
            },
            "countryOfResidence": {
              "type": "string"
            },
            "age": {
              "type": "string"
            }
          },
          "required": [
            "citizenship",
            "documentType",
            "firstName",
            "lastName",
            "gender",
            "birthday",
            "placeOfBirth",
            "countryOfResidence",
            "age"
          ],
          "additionalProperties": false
        },
        "id": {
          "type": "string"
        }
      },
      "required": [
        "journeyId",
        "personalDetails",
        "id"
      ]
    }
  }
}
